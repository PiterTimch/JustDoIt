<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editTaskRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:paddingTop="?attr/actionBarSize"
    android:background="@color/backgroundColor"
    tools:context=".screens.EditTaskActivity">

    <TextView
        android:id="@+id/editTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Редагувати задачу"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primaryColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTaskTitleLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Назва задачі"
        app:layout_constraintTop_toBottomOf="@id/editTaskTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTaskTitleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/editTaskImagePreview"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@drawable/task_bg"
        android:contentDescription="Task image preview"
        app:layout_constraintTop_toBottomOf="@id/editTaskTitleLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:src="@drawable/ic_launcher_foreground" />

    <Button
        android:id="@+id/editChooseImageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Завантажити нове зображення"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@color/titleTextColor"
        app:layout_constraintTop_toBottomOf="@id/editTaskImagePreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/updateTaskButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Оновити"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@color/titleTextColor"
        app:layout_constraintTop_toBottomOf="@id/editChooseImageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:onClick="onUpdateClick" />

</androidx.constraintlayout.widget.ConstraintLayout>
